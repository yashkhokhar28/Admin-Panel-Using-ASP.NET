@{
    ViewData["Title"] = "State List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    LOC_StateFilterModel lOC_StateFilterModel = new LOC_StateFilterModel();
}

@using System.Data
@model DataTable
@using AdminPanel.Areas.LOC_State.Models;


<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>&nbsp;Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a asp-controller="LOC_State" asp-action="LOC_StateList">State List</a>
            <i class="fa fa-circle"></i>
        </li>
    </ul>
</div>
<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet light bordered margin-top-10">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase">State List</span>
        </div>
        <div class="actions">
            <div class="btn-group btn-group-devided">
                <a asp-area="LOC_State" asp-controller="LOC_State" asp-action="LOC_StateAdd" class="btn green btn-rounded"><i class="fa fa-plus"></i>&nbsp;Add State</a>
            </div>
        </div>
    </div>
    <div class="portlet-body">
        <div class="col-md-3 pull-right">
            <select class="form-control" asp-for="@lOC_StateFilterModel.CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                <option value="">Select Country</option>
            </select>
            <span asp-validation-for="@lOC_StateFilterModel.CountryID" class="text-danger"></span>
        </div>
        @* <div class="pull-right">
            <form asp-area="LOC_State" asp-controller="LOC_State" asp-action="LOC_StateFilter">
                <input name="StateData" type="text" class="form-control input-sm input-small input-inline" placeholder="Database">
            </form>
        </div> *@
        <table class="table table-striped table-bordered table-hover table-header-fixed dataTable">
            <thead>
                <tr>
                    <th scope="col">State Name</th>
                    <th scope="col">State Code</th>
                    <th scope="col">Country Name</th>
                    <th class="text-center">Created</th>
                    <th class="text-center">Modified</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dataRow in Model.Rows)
                {
                    <tr>
                        <td>@dataRow["StateName"]</td>
                        <td>@dataRow["StateCode"]</td>
                        <td scope="col">@dataRow["CountryName"]</td>
                        <td class="text-center">@Convert.ToDateTime(dataRow["Created"]).ToString("dd-MM-yyyy hh:mm:ss")</td>
                        <td class="text-center">@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy hh:mm:ss")</td>
                        <td class="text-center">
                            <form method="post" asp-area="LOC_State" asp-controller="LOC_State" asp-action="LOC_StateDelete">
                                <input type="hidden" value="@Convert.ToInt32(dataRow["StateID"])" name="StateID">
                                <button type="submit" class="btn btn-outline-danger btn-xs" onclick="return fun1();">
                                    <i class="fa fa-close"></i>
                                </button>
                                <a class="btn btn-outline-success btn-xs" asp-area="LOC_State" asp-controller="LOC_State" asp-action="LOC_StateAdd" asp-route-stateid="@Convert.ToInt32(dataRow["StateID"])"><i class="fa fa-pencil"></i></a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script>
        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
        }