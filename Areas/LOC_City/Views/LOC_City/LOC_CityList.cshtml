@{
    ViewData["Title"] = "City List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable


<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>&nbsp;Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a asp-controller="LOC_City" asp-action="LOC_CityList">City List</a>
            <i class="fa fa-circle"></i>
        </li>
    </ul>
</div>
<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet light bordered margin-top-10">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase">City List</span>
        </div>
        <div class="actions">
            <div class="btn-group btn-group-devided">
                <a asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityAdd" class="btn green btn-rounded"><i class="fa fa-plus"></i>&nbsp;Add City</a>
            </div>
        </div>
    </div>
    <div class="portlet-body">
        <div class="pull-right">
            <div id="sample_1_filter" class="dataTables_filter">
                <input type="text" class="form-control input-sm input-small input-inline" id="sample_1" placeholder="jQuery">
            </div>
        </div>
        <div class="pull-right">
            <form asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityList">
                <input name="CityData" type="text" class="form-control input-sm input-small input-inline" placeholder="Database">
            </form>
        </div>
        <table class="table table-striped table-bordered table-hover table-header-fixed dataTable">
            <thead>
                <tr>
                    <th scope="col">City Name</th>
                    <th scope="col">City Code</th>
                    <th scope="col">Country Name</th>
                    <th scope="col">State Name</th>
                    <th class="text-center">Created</th>
                    <th class="text-center">Modified</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="sample_2">
                @foreach (DataRow dataRow in Model.Rows)
                {
                    <tr>
                        <td>@dataRow["CityName"]</td>
                        <td>@dataRow["CityCode"]</td>
                        <td>@dataRow["CountryName"]</td>
                        <td>@dataRow["StateName"]</td>
                        <td>@Convert.ToDateTime(dataRow["CreationDate"]).ToString("dd-MM-yyyy hh:mm:ss")</td>
                        <td>@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy hh:mm:ss")</td>
                        <td class="text-center">
                            <form method="post" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityDelete">
                                <input type="hidden" value="@Convert.ToInt32(dataRow["CityID"])" name="CityID">
                                <button type="submit" class="btn btn-outline-danger btn-xs" onclick="return fun1();">
                                    <i class="fa fa-close"></i>
                                </button>
                                <a class="btn btn-outline-success btn-xs" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityAdd" asp-route-Cityid="@Convert.ToInt32(dataRow["CityID"])"><i class="fa fa-pencil"></i></a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
        }