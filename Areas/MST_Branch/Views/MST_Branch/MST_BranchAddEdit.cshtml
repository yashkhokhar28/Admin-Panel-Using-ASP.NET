@{
    ViewData["Title"] = "Branch Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AdminPanel.Areas.MST_Branch.Models.MST_BranchModel

<main class="main" id="main">
    <div class="pagetitle">
        <h1>Branch</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i></a></li>
                <li class="breadcrumb-item"><span>Branch Add</span></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <form class="row g-3" role="form" method="post" asp-controller="MST_Branch" asp-action="MST_BranchSave" asp-area="MST_Branch">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x=>x.BranchID)
        <div class="col-md-12">
            <div class="form-floating">
                <input type="text" class="form-control" asp-for="BranchName" placeholder="Enter Country Name" />
                <span asp-validation-for="BranchName" class="text-danger"></span>
                <label for="floatingName">Branch Name</label>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-floating">
                <input type="text" class="form-control" asp-for="BranchCode" placeholder="Enter Country Name" />
                <span asp-validation-for="BranchCode" class="text-danger"></span>
                <label for="floatingName">Branch Code</label>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-outline-success">Save</button>
            <a class="btn btn-outline-secondary" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchList">Back</a>
        </div>
    </form>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


